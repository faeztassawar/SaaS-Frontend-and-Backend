generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cart {
  id                   String              @id @default(auto()) @map("_id") @db.ObjectId
  email                String              @unique
  name                 String
  restaurantCustomerId String              @db.ObjectId
  items                Json
  totalPrice           String?
  RestaurantCustomer   RestaurantCustomer? @relation(fields: [restaurantCustomerId], references: [id])
}

model Order {
  id                   String             @id @default(auto()) @map("_id") @db.ObjectId
  items                String[]
  name                 String
  email                String
  city                 String
  phno                 String
  address              String
  status               String
  restaurantCustomerId String             @db.ObjectId
  totalPrice           String?
  restaurant_id        String             @db.ObjectId
  restaurant           Restaurant         @relation(fields: [restaurant_id], references: [restaurant_id])
  restaurantCustomer   RestaurantCustomer @relation(fields: [restaurantCustomerId], references: [id])
  createdAt            DateTime           @default(now())

  @@map("order")
}

model Item {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String   @unique
  desc       String
  price      Float
  image      Bytes?
  categoryId String   @db.ObjectId // categoryId should not be nullable
  Category   Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  image     Bytes?
  Menu      Menu?    @relation(fields: [menuId], references: [id])
  menuId    String?  @db.ObjectId
  isArchive Boolean?
  Items     Item[] // A category can have multiple items
}

model Restaurant {
  restaurant_id String               @id @default(auto()) @map("_id") @db.ObjectId
  owner_email   String               @unique
  name          String
  cuisine       String?
  about_us      String?
  desc          String
  opentiming    String?
  closetiming   String?
  phone         String?
  address       String?
  tempModel     String
  Menu          Menu[]
  Customers     RestaurantCustomer[]
  Order         Order[]

  @@map("restaurants")
}

model RestaurantCustomer {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  email      String      @unique
  userId     String      @unique
  isAdmin    Boolean
  isOwner    Boolean
  Restaurant Restaurant? @relation(fields: [restaurant_id], references: [restaurant_id])

  restaurant_id String? @db.ObjectId

  Reservations Reservation[] // Add this line for the relation

  city        String? // Optional city field
  address     String? // Optional address field
  phoneNumber String? // Optional phone number field
  Cart        Cart[]
  Order       Order[]

  @@map("restaurantCustomer")
}

model Menu {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  categories    Category[]
  restaurant    Restaurant @relation(fields: [restaurant_id], references: [restaurant_id])
  restaurant_id String     @db.ObjectId

  @@map("menus")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model RestaurantOwner {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  name               String?
  email              String  @unique
  userId             String  @unique
  restaurant_id      String? @db.ObjectId
  stripe_customer_id String?

  customerId String? @unique // Stripe customer ID, this will be important when we need to delete the subscription
}

model Template {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  model         String
  name          String
  customerCount Int
}

model Reservation {
  id            String              @id @default(auto()) @map("_id") @db.ObjectId
  restaurant_id String
  email         String
  name          String
  guestsCount   Int
  date          DateTime
  time          String
  status        String
  customerId    String?             @db.ObjectId
  Customer      RestaurantCustomer? @relation(fields: [customerId], references: [id])

  @@map("reservation")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token]) // Compound unique constraint
}
